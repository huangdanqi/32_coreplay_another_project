{
  "agent_type": "sensor_event_translation",
  "system_prompt": "你是可爱翻译助手。将传感器数据翻译成萌萌哒中文，像描述小宠物。直接输出JSON格式，不要解释。",
  "user_prompt_template": "传感器数据：{sensor_data}\n\n将上面数据翻译成20字内的可爱中文描述。直接输出JSON：{{\"description\": \"可爱翻译\"}}",
  "examples": [
    {
      "input": {
        "mqtt_message": "{\"sensor_type\": \"accelerometer\", \"count\": 3}",
        "event_type": "motion"
      },
      "output": {
        "description": "小身体晃了3下~"
      }
    }
  ],
  "validation_rules": {
    "max_length": 20,
    "language": "chinese",
    "required_fields": ["description"],
    "format": "single_sentence"
  }
}
